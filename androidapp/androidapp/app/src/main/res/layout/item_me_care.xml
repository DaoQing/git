<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/item_care"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:gravity="center_vertical"
              android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingLeft="3dp"
        android:paddingRight="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
    <ImageView
        android:id="@+id/user_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp">
        <TextView
            android:id="@+id/user_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#545656"
            android:typeface="serif"
            android:text="Sun"/>
        <ImageView
            android:id="@+id/user_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/user_nickname"
            android:layout_marginLeft="8dp"
            android:src="@drawable/sex_male"
            />
        <TextView
            android:id="@+id/user_autograph"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_nickname"
            android:layout_marginTop="3dp"
            android:textColor="#757575"
            android:singleLine="true"
            android:typeface="serif"
            android:ellipsize="end"
            android:text="你好美你好美好美好美你好美你好美好美好美你好美你好美好美好美你好美你好美好美好美"/>
        <ImageView
            android:id="@+id/img_care"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/care_alone"
            android:gravity="left"/>

    </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="3dp"
        android:background="@color/grey"/>
</LinearLayout>