<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/message_comment"
    android:orientation="vertical">
    <include layout="@layout/top_title_common"></include>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingTop="5dp">
        <ImageView
            android:id="@+id/img_comment"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@drawable/icon" />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp">
            <TextView
                android:id="@+id/message_comment_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bonni"
                android:textColor="#545656"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/comment_message_others"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="别人给我的评论....."
                android:textColor="#757575"
                android:typeface="serif"
                android:ellipsize="end"
                android:layout_below="@+id/message_comment_name"/>
            <LinearLayout
                android:layout_below="@+id/comment_message_others"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
             <ImageView
                 android:id="@+id/img_comment_myself"
                 android:layout_below="@+id/comment_message_others"
                 android:layout_marginTop="5dp"
                 android:layout_width="120dp"
                 android:layout_height="70dp"
                 android:src="@drawable/publish_normal"
                 android:adjustViewBounds="true"
                 android:scaleType="centerCrop" />
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp">
                <TextView
                    android:id="@+id/comment_message_mytxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我发表的文字心情......"
                    android:textColor="#757575"
                    android:typeface="serif"
                    android:ellipsize="end"
                    android:singleLine="false" />
                <TextView
                    android:id="@+id/message_comment_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2小时前"
                    android:layout_alignParentBottom="true"
                    android:gravity="right"
                    android:layout_alignParentRight="true"
                    android:textColor="#757575"
                    android:typeface="serif"
                    android:ellipsize="end"
                   />
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="0dip"
        android:layout_marginRight="0dip"
        android:layout_marginTop="3dp"
        android:background="#696969"
        ></View>
</LinearLayout>
