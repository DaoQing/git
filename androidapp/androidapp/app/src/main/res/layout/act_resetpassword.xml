<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/top_title_common"></include>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dip"
        android:layout_marginRight="30dip"
        android:layout_marginTop="80dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="+86"/>
        <EditText
            android:id="@+id/et_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="请输入手机号"
            android:imeOptions="actionNext"
            android:numeric="integer"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="#9A9E9D"
            android:textSize="16sp"
            android:typeface="serif"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="30dip"
        android:layout_marginRight="30dip"
        android:layout_marginTop="3dp"
        android:background="#696969"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dip"
        android:layout_marginRight="30dip"
        android:layout_marginTop="30dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_checkcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入验证码"
            android:imeOptions="actionNext"
            android:layout_gravity="bottom"
            android:numeric="integer"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="#9A9E9D"
            android:textSize="16sp"
            android:typeface="serif"/>
        <Button
            android:id="@+id/bt_checkcode"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/shape_bt_focused_bg"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:text="立即获取"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="30dip"
        android:layout_marginRight="30dip"
        android:layout_marginTop="3dp"
        android:background="#696969"/>

    <EditText
        android:id="@+id/et_setpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:hint="请输入新密码（6位及以上的字母或数字）"
        android:imeOptions="actionNext"
        android:numeric="integer"
        android:paddingLeft="5dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dip"
        android:layout_marginRight="30dip"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textColorHint="#9A9E9D"
        android:textSize="13sp"
        android:typeface="serif"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="30dip"
        android:layout_marginRight="30dip"
        android:layout_marginTop="3dp"
        android:background="#696969"/>
    <Button
        android:id="@+id/bt_login"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:background="@drawable/shape_bt_focused_bg"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:text="完成"/>

</LinearLayout>