<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#f5f5f5"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:fitsSystemWindows="true"
    android:gravity="center|center_horizontal|center_vertical"
    >

    <!--设置一个用于获取焦点的不占位的layout-->
    <LinearLayout android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="0px"
        android:layout_height="0px"/>
    <ImageView
        android:layout_width="96dip"
        android:layout_height="96dip"
        android:background="#f5f5f5"
        android:src="@drawable/login_icon_128"
        android:layout_gravity="center_horizontal" />


    <com.ciyuan.dimera.androidapp.view.ClearEditText
        android:layout_width="fill_parent"
        android:id="@+id/etAccount"
        android:layout_height="45dip"
        android:drawableLeft="@drawable/account_icon_32"
        android:hint="手机号码"
        android:singleLine="true"
        android:background="#FFFFFF" />

       <LinearLayout
           android:layout_width="0px"
           android:layout_height="1dip"/>


    <com.ciyuan.dimera.androidapp.view.ClearEditText
        android:layout_width="match_parent"
        android:id="@+id/etPassword"
        android:inputType="textPassword"
        android:layout_height="45dip"
        android:drawableLeft="@drawable/password_icon_32"
        android:drawableRight="@drawable/delete_icon_32"
        android:hint="密码"
        android:singleLine="true"
        android:background="#FFFFFF"/>

    <Button
        android:layout_width="match_parent"
        android:id="@+id/btLogin"
        android:text="登陆"
        android:layout_marginTop="20dp"
        android:layout_height="45dip"
        android:paddingBottom="8dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:paddingTop="8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="22sp"
        android:textColor="#FFFFFFFF"
        android:background="@drawable/login_button"
        />


    <Button
        android:layout_width="wrap_content"
        android:text="忘记密码？"
        android:id="@+id/btRetrieve"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:paddingTop="15dp"
        android:paddingBottom="32dp"
        android:layout_gravity="right"
        android:textSize="15sp"
        android:textColor="#444444"
        />
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
        <View
            android:layout_width="36dp"
            android:layout_height="1px"
            android:background="#000000"
            android:id="@+id/lineLeft"
            android:layout_below="@+id/lineRight"
            android:layout_toLeftOf="@+id/tvThirdLogin"
            android:layout_toStartOf="@+id/tvThirdLogin"
            android:layout_centerVertical="true" />
        <TextView
            android:id="@+id/tvThirdLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="第三方登陆"
            android:textSize="15sp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"/>
        <View
            android:layout_width="36dp"
            android:layout_height="1px"
            android:background="#000000"
            android:id="@+id/lineRight"
            android:layout_toRightOf="@+id/tvThirdLogin"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:gravity="center"
        tools:context="com.ciyuan.dimera.androidapp.activity.AyonelMainActivity">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btQQLogin"
            android:background="@drawable/qq_icon_64"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btWeiboLogin"
            android:background="@drawable/weibo_icon_64"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btWeixinLogin"
            android:background="@drawable/weixin_icon_64"
            />

    </LinearLayout>
    <Button
        android:layout_width="128dp"
        android:text="注册"
        android:id="@+id/btRegister"
        android:layout_height="45dp"
        android:background="@drawable/register_button"
        android:textColor="#00DDAA"
        android:textSize="22sp"
        android:gravity="center"
        />
    <!--<Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btShare"
        android:text="分享"/>-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btTest"
        android:text="测试"/>
</LinearLayout>

