<resources>

    <!-- Base application theme. -->
    <!--<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">-->
    <style name="AppTheme" parent="android:Theme">
    </style>

    <style name="NonTitleBarTheme" parent="android:Theme.NoTitleBar.Fullscreen">
    </style>

    <style name="CustomWindowTitleBackground">
        　　
        <item name="android:background">#00DDAA</item>
    </style>
    <!--标题栏定义-->
    <style name="title" parent="android:Theme">
        　　
        <item name="android:windowTitleSize">48dp</item>
        　　
        <item name="android:windowTitleBackgroundStyle">@style/CustomWindowTitleBackground</item>
    </style>

    <style name="CustomCheckboxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox</item>
    </style>

    <style name="bt_login">
        <item name="android:layout_width">@dimen/x201</item>
        <item name="android:layout_height">@dimen/y33</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@drawable/bt_login_bg</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="tab_bottom">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="horizontal_gray_divider">
        <item name="android:layout_height">@dimen/split_one_pixels</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:background">@color/color_black_d9d9d9</item>
    </style>


    <!--设置页面-->
    <style name="text_setting">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:typeface">serif</item>
        <item name="android:textColor">#555555</item>
    </style>

    <!--我的页面-->

    <!--控制dialog进出动画-->
    <style name="dialog_animation" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="@android:windowExitAnimation">@anim/dialog_exit</item>
    </style>

    <style name="dialog_setting"  parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item><!-- 无标题 -->
        <item name="android:windowBackground">@color/transparent</item>
    </style>

    <!-- 收藏和分享的popuWindow的缩放动画 -->
    <style name="PopuWindowAnimTools" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_in</item>
        <item name="android:windowExitAnimation">@anim/push_out</item>
    </style>


    <!--  评论输入框popuWindow显示和隐藏 -->
    <style name="input_popwindow_anim_style">
        <item name="android:windowEnterAnimation">@anim/popshow_anim</item>
        <item name="android:windowExitAnimation">@anim/pophiden_anim</item>
    </style>
</resources>

